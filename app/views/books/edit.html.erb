<h2>Editing Book</h2>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
      </ul>

    </div>
<% end %>
<%= form_for (@book) do |f| %>
	<div class="field">
			<label>Title</label>
			<%= f.text_field :title %>
	</div>
    <div class="field">
			<label>Body</label>
			<%= f.text_area :body %>
	</div>
	<%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
